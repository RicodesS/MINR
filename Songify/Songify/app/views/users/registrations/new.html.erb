<div class="container" style="margin-bottom: 8%; margin-top: 5%;">
  <div class="row">
		<div class="col-md-5 mx-auto">
      <div id="first">
          <div class="myform form" style="background-color: rgba(255,255,255,0.65);">
              <div class="logo mb-3">
                 <div class="col-md-12 text-center">
                    <h1>Signup</h1>
                 </div>
              </div>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {multipart: true}) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <div class="field">
                  <%= f.label :Username %><br />
                  <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control", placeholder: "Enter Username", style: "background-color: rgba(255,255,255,0.6);"  %>
                </div>
                <br/>
                <div class="field">
                  <%= f.label :First_name %><br />
                  <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control", placeholder: "Enter Firstname", style: "background-color: rgba(255,255,255,0.6);"  %>
                </div>
                <br/>
                <div class="field">
                  <%= f.label :Last_name %><br />
                  <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control", placeholder: "Enter Lastname", style: "background-color: rgba(255,255,255,0.6);"  %>
                </div>
                <br/>
                <div class="field">
                  <%= f.label :Birthday %><br />
                  <%= f.date_select :date_of_birth, order:[:day,:month,:year], start_year: 1900, end_year: Time.now.year %>
                </div>
                <br/>
                <div class="field">
                    <%= f.label :Gender %><br />
                    <%= f.radio_button :gender, 'male' %> male
                    <%= f.radio_button :gender, 'female' %> female
                    <%= f.radio_button :gender, 'other' %> other
                    <%= f.radio_button :gender, 'undisclosed' %> undisclosed
                </div>
                <br/>
                <div class="field">
                    <%= f.label :Location %><br/>
                    <%= f.text_field :location, placeholder: "Enter your city", class: "form-control", style: "background-color: rgba(255,255,255,0.6);"  %>
                </div>
                <br/>

                <div class="field">
                  <%= f.label :avatar %>
                  <%= f.file_field :avatar %>
                  <%= f.hidden_field :avatar_cache %>
                </div>
                <br/>
                <div class="field">
                    <%= f.label :bio %><br/>
                    <%= f.text_area :bio, placeholder: "Insert your bio", style: "width: 100%; background-color: rgba(255,255,255,0.6);"  %>
                </div>
                <br/>

                <div class="field">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter email", style: "background-color: rgba(255,255,255,0.6);"  %>
                </div>
                <br/>
                <div class="field">
                  <%= f.label :password %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Enter Password", style: "background-color: rgba(255,255,255,0.6);"  %>
                </div>
                <br/>
                <div class="field">
                  <%= f.label :password_confirmation %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm Password", style: "background-color: rgba(255,255,255,0.6);"  %>
                </div>
                <br/>
                 <div class="col-md-12 text-center mb-3">
                    <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Get Started For Free</button>
                 </div>
                 <%- if controller_name != 'sessions' %>
                   <%= link_to "Already have an account?", new_user_session_path, style: "margin-left: 30.5%" %><br />
                 <% end %>
                 <br/>
              <% end %>

              <!--
                <%= render "users/shared/links" %>
              -->

           </div>
         </div>
       </div>
    </div>
</div>

